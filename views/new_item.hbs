<div class="sneaker_form">
    <form id="newshoe" method="POST" action="/item/new" enctype="multipart/form-data" style='text-align:center'>
        <h4>List a new shoe!</h4>
        <div class="form-floating">
            <input type="text" class="form-control" id="name" name="name" >
            <label for="floatingInput">Shoe Name</label>
        </div>
        {{!-- <label for="name">Shoe name:</label>
        <input type="text" id="name" name="name"> --}}
        <br>
        <div>
            <input class="form-control" list="mybrands" name="brand" id="brand" placeholder="Choose a brand or enter a new brand">    
            <datalist id="mybrands" >                
            {{#each brands}}
                <option value={{this.name}}>
            {{/each}}    
            
        </div>
        <br>
        
        <div class="form-floating">
            <input type="text" class="form-control" id="desc" name="desc" >
            <label for="floatingInput">Description</label>
        </div>
        <br>

        <div>
            <input class="form-control" list="mycategories" name="category" id="category" placeholder="Choose a category or enter a new category">    
            <datalist id="mycategories" >                
            {{#each categories}}
                <option value={{this.name}}>
            {{/each}}    
            
        </div>
        <br>
    
        <div class="form-floating">
            <input type="number" class="form-control" id="price" name="price" >
            <label for="floatingInput">Price</label>
        </div>

        <br>
        <div class="form-floating">
            <input type="number" class="form-control" id="size" name="size" >
            <label for="floatingInput">Size</label>
        </div>
        
        <br>

        <input type="file" name="file" />
        <br>
        <br>

        <input type="submit" value="submit" class="w-100 btn btn-lg btn-primary">
    </form>
</div>
